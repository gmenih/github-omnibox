{
    "manifest_version": 2,
    "author": "{{{htmlWebpackPlugin.options.pkg.author}}}",
    "name": "{{htmlWebpackPlugin.options.pkg.full_name}}",
    "version": "{{htmlWebpackPlugin.options.pkg.version}}",
    "description": "{{htmlWebpackPlugin.options.pkg.description}}",
    "permissions": [
        "storage",
        "tabs",
        "https://github.com/login/oauth/access_token*"
    ],
    "background": {
        "scripts": [
            "{{htmlWebpackPlugin.files.chunks.background.entry}}"
        ]
    },
    "icons": {
        "16": "assets/github-16x16.png",
        "32": "assets/github-32x32.png",
        "48": "assets/github-48x48.png",
        "64": "assets/github-64x64.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "assets/github-16x16.png",
            "32": "assets/github-32x32.png",
            "48": "assets/github-48x48.png",
            "64": "assets/github-64x64.png"
        },
        "default_title": "Github repo"
    },
    "options_ui": {
        "page": "options_page.html",
        "open_in_tab": true
    },
    "omnibox": {
        "keyword": "ghr"
    }
}
