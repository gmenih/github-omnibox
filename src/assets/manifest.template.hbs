{
    "manifest_version": 2,
    "author": "{{{htmlWebpackPlugin.options.pkg.author.name}}} <{{{htmlWebpackPlugin.options.pkg.author.email}}}>",
    "name": "{{htmlWebpackPlugin.options.pkg.full_name}}",
    "version": "{{htmlWebpackPlugin.options.pkg.version}}",
    "description": "{{htmlWebpackPlugin.options.pkg.description}}",
    "permissions": [
        "storage",
        "tabs",
        "https://github.com/login/oauth/access_token*"
    ],
    "background": {
        "scripts": [
            "./js/background.js"
        ]
    },
    "icons": {
        "16": "assets/icon-16.png",
        "32": "assets/icon-32.png",
        "64": "assets/icon-64.png"
    },
    "options_ui": {
        "page": "options_page.html",
        "open_in_tab": true
    },
    "omnibox": {
        "keyword": "gh"
    }
}
