{
  "name": "repo-omnibox",
  "version": "1.0.0",
  "full_name": "GitHub Omnibox Search",
  "description": "A browser extension that suggests your GitHub repos in Omnibox",
  "main": "webpack/config.js",
  "scripts": {
    "start": "webpack-dashboard -- webpack-dev-server",
    "dev": "webpack-dev-server",
    "build:dev": "webpack --progress -p --env=dev",
    "build:prod": "webpack --progress -p --env=prod",
    "build:watch": "webpack --watch",
    "build": "npm run build:dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "prettier --write ./src/**/*.{ts,tsx}",
    "lint": "tslint -c tslint.json ./src/**/*.{ts,tsx} --fix",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@types/chrome": "0.0.82",
    "@types/jest": "24.0.11",
    "@types/lodash.debounce": "4.0.6",
    "@types/react": "16.8.13",
    "@types/react-dom": "16.8.4",
    "awesome-typescript-loader": "5.2.1",
    "clean-webpack-plugin": "2.0.1",
    "copy-webpack-plugin": "5.0.2",
    "file-loader": "3.0.1",
    "handlebars": "4.1.2",
    "handlebars-loader": "1.7.1",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.7.1",
    "lint-staged": "8.1.5",
    "pre-commit": "1.2.2",
    "prettier": "1.17.0",
    "raw-loader": "2.0.0",
    "ts-jest": "24.0.2",
    "tslint": "5.15.0",
    "tslint-react": "4.0.0",
    "typescript": "3.4.3",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.3.1",
    "zip-webpack-plugin": "3.0.0"
  },
  "dependencies": {
    "@emotion/core": "10.0.10",
    "@emotion/styled": "10.0.10",
    "debounce": "1.2.0",
    "graphql-request": "1.8.2",
    "lodash.debounce": "4.0.8",
    "mobx": "5.9.4",
    "mobx-react": "5.4.3",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "precommit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
