{
  "exclude": ["./**/__tests__/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [ "es2018", "dom", "es2019", "ES2020" ],
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}